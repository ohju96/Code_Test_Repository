package Java_Study;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.Iterator;
import java.util.List;

public class ch04 {

	public static void main(String[] args) {

		// HashMap을 저장하기 위한 List 컬렉션 객체를 메모리에 생성
		List<HashMap<String, String>> rList = new ArrayList<>();
		
		// 앞서 선언된 rList 변수에 저장할 HashMap 객체 메모리에 저장
		HashMap<String, String> pMap = new HashMap<>();
		
		pMap.put("name", "오주현");
		pMap.put("email", "ohju962");
		pMap.put("naddr", "경기");
		pMap.put("dept", "자바");
		
		// 오주현 정보가 저장된 HashMap 객체를 List 객체에 저장
		rList.add(pMap);
		
		// 오주현 정보 저장으로 인해 사용이 끝난 HashMap 변수 메모리에서 삭제
		pMap = null;
		
		// 두기 정보를 저장하기 위해 기존 HashMap 변수에 새롭게 메모리에 올린다.
		pMap = new HashMap<>();
		
		pMap.put("name", "두기");
		pMap.put("email", "dogi@");
		pMap.put("addr", "경기");
		pMap.put("dept", "강아지");
		
		// 두기 정보가 저장된 HashMap 객체를 List 객체에 저장
		rList.add(pMap);
		
		// 두기 정보 저장으로 인해 사용이 끝난 HashMap 변수 메모리에서 삭제
		pMap = null;
		
		Iterator<HashMap<String, String>> it = rList.iterator();
		
		while(it.hasNext()) {
			HashMap<String, String> rMap = it.next();
			
			System.out.println("####반복시작####");
			System.out.println("name : " + rMap.get("name"));
			System.out.println("email : " + rMap.get("email"));
			System.out.println("addr : " + rMap.get("addr"));
			System.out.println("dept : " + rMap.get("dept"));

			// HashMap 변수 메모리에서 삭제
			rMap = null;
			System.out.println("####반복 끝####");
		}
		
	}

}
