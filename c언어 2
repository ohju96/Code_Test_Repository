#include <stdio.h>

int main()
{
	int a, b;
	int result;

	//a = 100;
	//b = 50;
	//scanf("%d %d", &a, &b);

	printf("첫번쨰 계산할 값을 입력하세요 ==>");
	scanf("%d", &a);
	
	printf("첫번쨰 계산할 값을 입력하세요 ==>");
	scanf("%d", &b);
	// &(엔퍼센트)를 꼭 써야한다.

	result = a + b;
	printf("%d + %d = %d \n", a, b, result);

	result = a - b;
	printf("%d - %d = %d \n", a, b, result);
	
	result = a * b;
	printf("%d * %d = %d \n", a, b, result);

	result = a / b;
	printf("%d / %d = %d \n", a, b, result);
}
